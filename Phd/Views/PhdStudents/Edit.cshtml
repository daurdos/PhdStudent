@model Phd.ViewModels.CreateUpdateStudentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменить</h2>

<h4> Профиль докторанта: </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PhdStudent.Id" />
            <div class="form-group">
                <label asp-for="PhdStudent.LastName" class="control-label"></label>
                <input asp-for="PhdStudent.LastName" class="form-control" />
                <span asp-validation-for="PhdStudent.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhdStudent.FirstName" class="control-label"></label>
                <input asp-for="PhdStudent.FirstName" class="form-control" />
                <span asp-validation-for="PhdStudent.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhdStudent.MiddleName" class="control-label"></label>
                <input asp-for="PhdStudent.MiddleName" class="form-control" />
                <span asp-validation-for="PhdStudent.MiddleName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="PhdStudent.MajorId" class="control-label"></label>
                <select asp-for="PhdStudent.MajorId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.ListOfMajor, "Id", "MajorCypher"))"></select>
            </div>

            <div class="form-group">
                <label asp-for="PhdStudent.TrainingDirectionId" class="control-label"></label>
                <select asp-for="PhdStudent.TrainingDirectionId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.ListOfTrainingDirection, "Id", "TrainingDirectionCypher"))"></select>
            </div>


            <div class="form-group">
                <label asp-for="PhdStudent.ThesisNameRus" class="control-label"></label>
                <input asp-for="PhdStudent.ThesisNameRus" class="form-control" />
                <span asp-validation-for="PhdStudent.ThesisNameRus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhdStudent.ThesisComDate" class="control-label"></label>
                <input asp-for="PhdStudent.ThesisComDate" class="form-control" />
                <span asp-validation-for="PhdStudent.ThesisComDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhdStudent.ThesisComDate" class="control-label"></label>
                <input asp-for="PhdStudent.ThesisComDate" class="form-control" />
                <span asp-validation-for="PhdStudent.ThesisComDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhdStudent.ComMemberNumberTotal" class="control-label"></label>
                <input asp-for="PhdStudent.ComMemberNumberTotal" class="form-control" />
                <span asp-validation-for="PhdStudent.ComMemberNumberTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
